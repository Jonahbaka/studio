
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to create a user profile for themselves.
    // Allow users to read their own profile.
    // Allow authenticated users to read provider profiles for search functionality.
    match /users/{userId} {
      allow read, update, create: if request.auth.uid == userId;
      // Allow providers to read any user profile (e.g. for patient charts)
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'nurse', 'admin'];
    }

    // Allow admins to read/write license requests.
    // Allow users to create their own license request.
    match /licenseRequests/{requestId} {
      // Use a direct role check on the user's document for security.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
      allow create: if request.auth.uid == requestId;
    }

    // A patient can create a visit for themselves.
    // A patient or provider can read/update a visit if they are a participant.
    match /visits/{visitId} {
      allow read, update: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid == request.resource.data.patientId;
      
      // Messages subcollection
      match /messages/{messageId} {
         allow read, create: if request.auth.uid in get(/databases/$(database)/documents/visits/$(visitId)).data.participants;
      }
    }
    
    // Providers/Admins can list 'Waiting' patients.
    // Patients can list their own visits.
    match /visits/{visitId} {
       allow list: if (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'nurse', 'admin'] && request.query.where[0][0] == 'status' && request.query.where[0][1] == '==' && request.query.where[0][2] == 'Waiting')
                      || (request.query.where[0][0] == 'participants.' + request.auth.uid && request.query.where[0][1] == '==' && request.query.where[0][2] == true);
    }
  }
}
