
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow get, update, create: if request.auth.uid == userId;
      // Admins can get any user profile
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'nurse', 'admin', 'superadmin'];
      // Any authenticated user can list users. The client-side code restricts who can see the admin page.
      allow list: if request.auth != null;
    }

    match /licenseRequests/{requestId} {
      // Only admins can read/write license requests
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
      // Any authenticated user can create their own license request
      allow create: if request.auth != null;
    }

    match /visits/{visitId} {
        // Any authenticated user can create a visit
        allow create: if request.auth != null;
        
        // Users can only read/update/delete visits they are a participant in
        allow read, update, delete: if request.auth != null && resource.data.participants[request.auth.uid] == true;
        
        // Any authenticated user can list visits; the client queries are filtered to their own visits
        allow list: if request.auth != null;

        match /messages/{messageId} {
            // Users can only read/write messages in visits they are a part of
            allow read, write: if request.auth != null && get(/databases/$(database)/documents/visits/$(visitId)).data.participants[request.auth.uid] == true;
        }
    }
  }
}
