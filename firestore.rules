
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Users can read, create, and update their own profile.
      allow get, create, update: if request.auth.uid == userId;
      // Admins and providers can view any user's profile.
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'nurse', 'admin', 'superadmin'];
      // Any authenticated user can list users (client-side filters what is shown).
      allow list: if request.auth != null;
    }

    match /licenseRequests/{requestId} {
      // Only admins can manage license requests.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
      // Any user can create their own license request upon signup.
      allow create: if request.auth != null;
    }

    match /visits/{visitId} {
        // Any authenticated user can create a visit.
        allow create: if request.auth != null;
        
        // Users can only read or modify visits they are a participant in.
        // Providers can also list all visits to populate the waiting room.
        allow read, list, update, delete: if request.auth != null && (
          resource.data.participants[request.auth.uid] == true ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'nurse', 'admin', 'superadmin']
        );

        match /messages/{messageId} {
            // Users can only read, write, or list messages in visits they are a part of.
            allow list, read, write: if request.auth != null && get(/databases/$(database)/documents/visits/$(visitId)).data.participants[request.auth.uid] == true;
        }
    }
  }
}
