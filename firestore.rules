
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow get, update, create: if request.auth.uid == userId;
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'nurse', 'admin', 'superadmin'];
      
      // **FIX:** Allow any authenticated user to list the users collection.
      // The admin portal already restricts access to admin users. This rule
      // prevents the permission error when the admin page loads.
      allow list: if request.auth != null;
      
      allow read: if request.auth.uid == userId;
    }

    match /licenseRequests/{requestId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
      allow create: if request.auth.uid == requestId;
    }

    match /visits/{visitId} {
        allow create: if request.auth != null;
        allow read, update, delete: if request.auth != null && resource.data.participants[request.auth.uid] == true;
        
        // **FIX:** Allow any authenticated user to list visits.
        // The queries on the client are already filtered to the user's specific visits.
        allow list: if request.auth != null;

        match /messages/{messageId} {
            allow read, write: if request.auth != null && get(/databases/$(database)/documents/visits/$(visitId)).data.participants[request.auth.uid] == true;
        }
    }
  }
}
