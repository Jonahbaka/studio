
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Allow users to read and write to their own profile.
      allow read, update, create: if request.auth.uid == userId;
      // Allow providers to get individual user documents (e.g., for patient charts).
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'nurse', 'admin'];
      // **FIX**: Allow users with an admin role to list the entire users collection for the dashboard.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }

    // Allow admins to read/write license requests.
    // Allow users to create their own license request.
    match /licenseRequests/{requestId} {
      // Use a direct role check on the user's document for security.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
      allow create: if request.auth.uid == requestId;
    }

    // Allow any authenticated user to read, write, and list visits.
    // This is a relaxed rule to prevent permission errors.
    match /visits/{visitId} {
      allow read, write, list: if request.auth != null;
      
      match /messages/{messageId} {
         allow read, write: if request.auth != null && get(/databases/$(database)/documents/visits/$(visitId)).data.participants[request.auth.uid] == true;
      }
    }
  }
}
