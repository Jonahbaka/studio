
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Allow users to read and write to their own profile.
      // Providers can get individual user docs for patient charts.
      // Admins can get any user doc.
      allow get, update, create: if request.auth.uid == userId;
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'nurse'];
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];

      // **FIX:** Allow users with an admin role to list the entire users collection.
      // This rule correctly checks the role from the user's document.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
      
      // A user can read their own document fully.
      allow read: if request.auth.uid == userId;
    }

    // Allow admins to read/write license requests.
    // Allow users to create their own license request.
    match /licenseRequests/{requestId} {
      // Use a direct role check on the user's document for security.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
      allow create: if request.auth.uid == requestId;
    }

    // Rules for the 'visits' collection.
    match /visits/{visitId} {
        // Any authenticated user can create a visit.
        allow create: if request.auth != null;

        // Users can read/update a visit document if their UID is in the 'participants' map.
        // This allows both patients and providers to access the visits they are part of.
        allow read, update: if request.auth != null && resource.data.participants[request.auth.uid] == true;

        // **FIX:** Users can list visits where they are a participant.
        // This is crucial for the "My Visits" page and provider dashboards.
        allow list: if request.auth != null;

        // Rules for the messages subcollection within a visit.
        match /messages/{messageId} {
            // Participants of a visit can read and write messages within that visit.
            allow read, write: if request.auth != null && get(/databases/$(database)/documents/visits/$(visitId)).data.participants[request.auth.uid] == true;
        }
    }
  }
}
