
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to create a user profile for themselves.
    // Allow users to read their own profile.
    // Allow authenticated users to read provider profiles for search functionality.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }

    // Allow admins to read/write license requests.
    // Allow users to create their own license request.
    match /licenseRequests/{requestId} {
      // Use custom claims for role-based access.
      allow read, write: if request.auth.token.role in ['admin', 'superadmin'];
      allow create: if request.auth.uid == requestId;
    }

    // A patient can create a visit for themselves.
    // A patient or provider can read/update a visit if they are a participant.
    match /visits/{visitId} {
      allow read, update: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid == request.resource.data.patientId;
      
      // Messages subcollection
      match /messages/{messageId} {
         allow read, create: if request.auth.uid in get(/databases/$(database)/documents/visits/$(visitId)).data.participants;
      }
    }
    
    // Providers/Admins can query the waiting room for 'Waiting' patients.
    // Patients can query for their own visits.
    // This rule is now based on custom claims for performance and security.
    match /visits/{visitId} {
       allow list: if (request.auth.token.role in ['doctor', 'nurse', 'admin'] && request.query.where.size() == 1 && request.query.where[0][0] == 'status' && request.query.where[0][1] == '==' && request.query.where[0][2] == 'Waiting')
                      || (request.query.where.size() == 1 && request.query.where[0][0] == 'participants.' + request.auth.uid && request.query.where[0][1] == '==' && request.query.where[0][2] == true);
    }

    // Fallback for other collections - requires authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
